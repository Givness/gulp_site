back(size, color)
    background-color color
    box-shadow 4px 5px 10px rgba(0, 0, 0, 0.4)
    padding: size + "%"
    margin 0 0 1% 0
    border-radius 5px

colorText = black
activeColor = khaki

html
    color colorText

body
    background-color silver

nav
    back(0, gray)
    text-align right
    & a
        display inline-block
        padding 1%
        color white
        text-decoration: none
        margin: 0 1vw
        &:hover
        &.active
            background-color activeColor
            color black
            border-radius 5px

article
    width 70%
    margin auto
    display grid
    grid-gap 4%
    & section
        display grid
        grid-template-columns 1fr 2fr
        align-items center
        back(2, #f1f1f1)
        & h2
            margin 0
            text-align center
        & img
            width: 50%
            margin: 0 auto
        & p
            margin: 0 5%
        & h3
            grid-column 1/3
        & hr
            grid-column 1/3
            width 100%
        & .system
            grid-column 1/3
        @media screen and (max-width: 600px)
            & p,
            & img
                grid-column 1/3

footer
    back(0, rgb(80, 80, 80))
    & h4
        padding 5px
        color #f8f8f8
